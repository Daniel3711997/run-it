{
    "compilerOptions": {
        "strict": true,
        "rootDir": "src",
        "lib": ["es2022"],
        "sourceMap": true,
        "module": "node16",
        "target": "es2022",

        "paths": {
            "@/*": ["./src/*"]
        },

        "skipLibCheck": true,
        "noUnusedLocals": false,
        "noImplicitReturns": false,
        "noUnusedParameters": false,
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": true
    }
}
